{
	"AWSEBDockerrunVersion": 2,
	"containerDefinitions": [
		{
		"name": "client",
		"image": "bdwivedi/multi-client",
		"hostname": "client",
		"essential": false,
		"memory": 128
		},
		{
                "name": "server",
                "image": "bdwivedi/multi-server",
		"hostname": "api",
		"essential": false,
		"memory": 128
                },
		{
                "name": "nginx",
                "image": "bdwivedi/multi-nginx",
		"hostname": "nginx",
		"essential": "true",
		"memory": 128,
		"portMappings": [
			{
				"hostPort": 80,
				"containerPort": 80
			}
		],
		"links": ["client","server"]
		
                },
		{
                "name": "worker",
                "image": "bdwivedi/multi-worker",
		"hostname": "worker",
		"essential": false,
		"memory": 128
                }
	]
}
